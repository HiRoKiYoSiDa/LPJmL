#SBATCH --ntasks=512
#SBATCH --qos=standby
#SBATCH --signal=15@180
#SBATCH -J LPJmL40
#SBATCH --comment="LPJmL Version 5.2.001 args: -DFROM_RESTART lpjml_intensification.js"
#SBATCH --mail-user=minoli
#SBATCH --mail-type=end
#SBATCH --account=macmit
#SBATCH --tasks-per-node=16
#SBATCH -o  lpjml.%j.out
#SBATCH -e  lpjml.%j.err

module load mpi/intel/5.1.3

export LPJROOT=/home/minoli/LPJmL_GitLab/macmit_intensification

ulimit -c unlimited

export I_MPI_PMI_LIBRARY=/p/system/slurm/lib/libpmi.so

srun --propagate  $LPJROOT/bin/lpjml -DFROM_RESTART lpjml_intensification.js

rc=$?  # save return code of srun
exit $rc # exit with return code
